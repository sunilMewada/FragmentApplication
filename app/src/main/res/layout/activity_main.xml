<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sunil.fragmentapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment Example"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="65dp"/>

   <fragment
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       tools:layout="@layout/fragmentsample_activity"
       android:id="@+id/fragment1"
       android:layout_weight="1"
       android:name="com.sunil.fragmentapplication.FragmentSample"/>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment2"
        tools:layout="@layout/fragmentsample_activity2"
        android:name="com.sunil.fragmentapplication.FragmentSample2"
        android:layout_weight="1"/>
</LinearLayout>
